<h1>create new task</h1>
<%= render 'form' %>

<h1>list of tasks</h1>

<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.description %></p>
  <%= link_to task.name, task_path(task) %>
  <%= link_to "Edit", edit_task_path(task) %>
  <%= link_to "Delete", task_path(task),
  method: :delete,
  data: { confirm: "Are you sure?" } %>
<% end %>


